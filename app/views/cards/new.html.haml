.index
  = render "/users/mypage.header"

  .index__breadCrumbs
    FURIMA > マイページ > 支払い方法
  .index__main-contents
    = render "/users/mypage.nav"

    .card_add 
      .title 
        クレジットカード情報入力

      = form_tag("/cards", method: :post, id: "card_token", class: "details", name: "inputForm") do
        .card-form
          .number-details
            .card-number  
              カード番号
            %span.must_check 
              必須
          .number
            = text_field_tag 'payment_card_no', "", class: 'cardnumber', id: "card_number", placeholder: '半角数字のみ', type: "text", maxlength: "16"
          .image
            = image_tag(image_path('cards/visa.gif'), class: 'visa')
            = image_tag(image_path('cards/master.gif'), class: 'master')
            = image_tag(image_path('cards/jcb.gif'), class: 'jcb')
            = image_tag(image_path('cards/amex.gif'), class: 'amex')
            = image_tag(image_path('cards/diners.gif'), class: 'diners')
            = image_tag(image_path('cards/discover.gif'), class: 'discover')

          .expirationdate
            .expirationdate__details
              .date 
                有効期限
              %span.must_check 
                必須
            .expirationdate__choice
              .month
                %select#payment_card_month.card-default{name: "payment_card_month", type: "text"}
                  %option{value: "1"} 01
                  %option{value: "2"} 02
                  %option{value: "3"} 03
                  %option{value: "4"} 04
                  %option{value: "5"} 05
                  %option{value: "6"} 06
                  %option{value: "7"} 07
                  %option{value: "8"} 08
                  %option{value: "9"} 09
                  %option{value: "10"} 10
                  %option{value: "11"} 11
                  %option{value: "12"} 12
                .month__details 
                  月
              .year
                %select#payment_card_year.card-default{name: "payment_card_year", type: "text"}
                  %option{value: "2020"} 20
                  %option{value: "2021"} 21
                  %option{value: "2022"} 22
                  %option{value: "2023"} 23
                  %option{value: "2024"} 24
                  %option{value: "2025"} 25
                  %option{value: "2026"} 26
                  %option{value: "2027"} 27
                  %option{value: "2028"} 28
                  %option{value: "2029"} 29
                  %option{value: "2030"} 30
                .year__details 
                  年

          .securitycode
            .securitycode__details
              .securitycode__details__title 
                セキュリティコード
              %span.must_check 
                必須
            .securitycode__cardsecurity
              = text_field_tag  "payment_card_cvc", "", type: 'text', class: 'securitycode__cardsecurity__form', id: "card_cvc", maxlength: "4", placeholder: 'カード背面4桁もしくは3桁の番号'
            .card-question 
              = link_to "#", class: "card-question__icon" do
                =icon('fas', 'question-circle')
                カード裏面の番号とは？

          .add 
            = submit_tag "追加する", class: "add__btn", id: "payment_card_submit-button"

  .index__appBanner
    .index__appBanner__inner
      .index__appBanner__inner__title
        だれでもかんたん、人生を変えるフリマアプリ
      .index__appBanner__inner__text
        今すぐ無料ダウンロード！
      .index__appBanner__inner__icon
        = link_to image_tag("Download_on_the_App_Store_Badge_US-UK_blk_092917.png", class: "APPstore-btn", alt: "サンプル画像"), root_path
        = link_to image_tag("google-play-badge.png", class: "Googleplay-btn", alt: "サンプル画像"), root_path

  = render "/users/mypage.footer"