.signup
  .signup__header
    .header-icon
      = link_to root_path do
        = image_tag "logo.png"
  .sign-main
    = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
      = render "devise/shared/error_messages", resource: resource
      .sign-main-box
        %h1.sign-main-box__title ログイン
        .field
          = f.label :メールアドレス, class: "field__text"
          = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "field__input"
        .field
          = f.label :パスワード, class: "field__text"
          = f.password_field :password, autocomplete: "current-password", placeholder:"パスワード", class: "field__input"
        - if devise_mapping.rememberable?
          .field
            = f.check_box :remember_me
            = f.label :ログイン状態を保存する
        = f.submit "ログイン", class: "actions"
    .shared-links
      = render "devise/shared/links"
  .signup__footer
    .inner
      %ul
        %li
          = link_to "#" do
            プライバシーポリシー
        %li
          = link_to "#" do
            FURIMA利用規約
        %li
          = link_to "#" do
            特定商取引に関する表記
      .footer-icon
        = link_to "#" do
          = image_tag "logo.png", class: "hurima-icon"
        %p
          © Furima, Inc.