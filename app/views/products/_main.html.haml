.main
  .main__content
    = form_for @product do |f|
      .main__content__form__inside
        .item-image
          .item-image__body
            .item-image__body__title
            %label{for: "", class: "heading"}
              出品画像
            %span.required_tag
              必須
            %p.discription
              最大10枚までアップロードできます
            .item-image__body__upload
              .upload__area
                .upload__area__inside
                  .cameralogo
                    =link_to "/" do
                      = image_tag src="icon_camera.png", class: "camera-logo"
                  .drop-text
                    %br.drop 
                    ドラッグアンドドロップ
                    %br.drop
                    またはクリックしてファイルをアップロード
              = f.fields_for :photos do |i|
                = i.file_field :name, {class: "file-field"}

              
        .item-name
          .item-name__body
            .item-name__body__title
            %label{for: "", class: "heading"}
              商品名
            %span.required_tag
              必須
            .item-name__body__titlearea
              = f.text_field :name, {class: "item_form", placeholder: " 40文字まで" }
            .item-name__body__discription
              %label{for: "", class: "heading"}
                商品の説明
              %span.required_tag
                必須
            .item-name__body__discription
              =  f.text_area :content, {class: "form__discription", placeholder: "商品の説明（必須 1,000文字以内）（色、素材、重さ、定価、注意点など）例）2010年頃に1万円で購入したジャケットです。ライトグレーで傷はありません。あわせやすいのでおすすめです。"}
            .item-name__body__option
              0/1000
        .item-category
          .item-category__body
            .item-category__body__title
            %label{for: "", class: "titlename"}
              商品の詳細
            .item-category__body__category
            %label{for: "", class: "heading"}
              カテゴリー
            %span.required_tag
              必須
            .item-category__body__categoryname
            = f.select :category_id, [["選択してください",""],["レディース",1],["メンズ",2],["その他",3]],{ class: "form__sach", placeholder: "　選択してください" }
            .item-category__body__brand
            %label{for: "", class: "heading"}
              ブランド
            %span.required_tag
              任意
            .item-category__body__brandname
            = f.text_field :brand, {class: "form__sach", placeholder: "　例）シャネル"}
            .item-category__body__condition
            %label{for: "", class: "heading"}
              商品の状態
            %span.required_tag
              必須
            .item-category__body__conditionform
            = f.select :condition, [["選択してください",""],["新品",0],["未使用",1],["未使用に近い",2],["目立った傷なし",3],["傷あり",4]],{prompt: "---"},{ class: "form__sach", placeholder: "　選択してください" }
        .item-shipping
          .item-shipping__body
            .item-shipping__body__discription
              %label{for: "", class: "titlename"}
                配送について
            .item-shipping__body__title
            %label{for: "", class: "heading"}
              配送料の負担
            %span.required_tag
              必須
            .item-shipping__body__titleform
            = f.select :fee, [["選択してください",""],["送料込（出品者負担）",0],["着払い（購入者負担）",1]],{prompt: "---"},{ class: "heading", placeholder: "　選択してください" }
            .item-shipping__body__area
            %label{for: "", class: "heading"}
              発送元の地域
            %span.required_tag
              必須
            .item-shipping__body__areaform
            = f.select :area, [ ["北海道",1], ["青森県", 2], ["岩手県", 3], ["宮城県", 4], ["秋田県", 5], ["山形県", 6], ["福島県", 7], ["茨城県", 8], ["栃木県", 9], ["群馬県", 10], ["埼玉県", 11], ["千葉県", 12], ["東京都", 13], ["神奈川県", 14], ["新潟県", 15], ["富山県", 16], ["石川県", 17], ["福井県", 18], ["山梨県", 19], ["長野県", 20], ["岐阜県", 21], ["静岡県", 22], ["愛知県", 23], ["三重県", 24], ["滋賀県", 25], ["京都府", 26], ["大阪府", 27], ["京都府", 28], ["奈良県", 29], ["和歌山県", 30], ["鳥取県", 31], ["島根県", 32], ["岡山県", 33], ["広島県", 34], ["山口県", 35], ["徳島県", 36], ["香川県", 37], ["愛媛県", 38], ["高知県", 39], ["福岡県", 40], ["佐賀県", 41], ["長崎県", 42], ["熊本県", 43], ["大分県", 44], ["宮崎県", 45], ["鹿児島県", 46], ["沖縄県", 47], ["未定", 48] ], {prompt: "---"},{class: "form__sach"}
            .item-shipping__body__days
            %label{for: "", class: "heading"}
              発送までの日数
            %span.required_tag
              必須
            .item-shipping__body__daysform
            = f.collection_select :shipping_day_id, Shippingday.all, :id, :name, {},{class: "form__sach"}
        .item-price
          .item-price__body
            .item-price__body__title
              %label{for: "", class: "titlename"}
                価格（¥300〜9,999,999）
            .item-price__body__price
              %label{for: "", class: "heading"}
                販売価格
                %span.required_tag
                  必須
              .item-price__body__price__form
                %span.price_tag
                  ¥
                = f.text_field :price, {class: "form__price", placeholder: "　                                                   0"}
            .item-price__body__tax
              %label{for: "", class: "price-tax"}
                販売手数料（10%）
              %span.price_tag

        .item-selling
          %label{for: "", class: "price-tax"}
            販売利益
          .item-selling__body
            .item-selling__body__title
            = f.submit "出品する", {class:"item-selling__body__btn-exhibition"}
            = link_to "戻る", root_path, {class:"item-selling__body__btn-back"}
        .selling-rules
          禁止されている
          %span.font_test
            行為
          および
          %span.font_test
            出品物
          を必ずご確認ください。
          %span.font_test
            偽ブランド品
          や
          %span.font_test
            盗品物
          などの販売は犯罪であり、法律により処罰される可能性があります。 また、出品をもちまして
          %span.font_test
            加盟店規約
          に同意したことになります。
          .selling-rules__body
            .selling-rules__body__discription