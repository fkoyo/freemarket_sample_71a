.index__main__pickupContainer__head
  ピックアップ3
.index__main__pickupContainer__headbottom
  = link_to "/", class: "link-btn" do
    新規投稿商品
.index__main__pickupContainer__list
  .index__main__pickupContainer__list__lis        
    .index__main__pickupContainer__list__lis__links
      - @products.each do |product|
        = link_to product_path(product.id), class:"product-link" do
          .product-image-box             
            = image_tag product.photos[0].name.url,size: "200x150" if product.photos.present?             
          .product-link__description
            .product-name
              = product.name
            .product-cost
              %ul{class: "product-cost__list"}
                %li
                  = "#{product.price.to_s}"+ "円"
                %li{class: "like-icon"}
                  ★0
            .product-tax
              (税込) 
          - unless product.status == 1
          - else
            .sold-out 売り切れ
            .items-box_photo__sold
              .items-box_photo__sold__inner
                SOLD
