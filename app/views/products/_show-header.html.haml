.products__header
  .products__header__inner
    .products__header__inner__mainHeader
      %h1.products__header__inner__mainHeader__icon
        = link_to image_tag("logo.png"), root_path
      .products__header__inner__mainHeader__searchBox
        .products__header__inner__mainHeader__searchBox__inputform
          %input{type: "text", placeholder: "キーワードから探す"}
          %button{type: "submit"}
            .products__header__inner__mainHeader__searchBox__inputform__icon
              = image_tag "icon-search 1.png"
    .products__header__inner__nav
      %ul.listsLeft
        %li.listsLeft__item.listsLeft__item--first
          = link_to "カテゴリー", "#"
        %li.listsLeft__item.listsLeft__item--second
          = link_to "ブランド", "#"

      %ul.listsRight
      - if user_signed_in?
        %li.listsRight__item.listsRight__logout
          = link_to "ログアウト", destroy_user_session_path
        %li.listsRight__item.listsRight__mypage
          = link_to "#{current_user.nickname}のページ", users_index_path

      - else
        %li.listsRight__item.listsRight__login
          = link_to "ログイン", user_session_path
        %li.listsRight__item.listsRight__newUser
          = link_to "新規会員登録", new_user_registration_path