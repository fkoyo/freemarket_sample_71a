.purchase
  
  = render "purchase.header"

  .purchase__contents
    .purchase__contents__message
      %h1 購入内容の確認
    .purchase__contents__items
      .purchase__contents__items__detail
        .purchase__contents__items__detail--image
          = image_tag "icon-01.png", size: "100x100"
        .purchase__contents__items__detail--description
          %p.purchase__contents__items__detail--description__name
            ひらめき大辞典
          %p.purchase__contents__items__detail--description__price
            %span.item-price
              ¥920
            %span.item-shippi-fee 税込 (送料込み) 
    .purchase__contents__buy-price
      %h2 支払い金額
      .purchase__contents__buy-price__pay-box
        %span.pay-price
        ¥920
    .purchase__contents__credit
      %h3 支払い方法   
      .purchase__contents__credit__card-box
        %p クレジットカード
        %p.credit_num
          ************1234
        %p.expiration-date
          有効期限 06 / 20
    .purchase__contents__address
      %h4 配送先
      .purchase__contents__address__add-box
        %p.post_num
          〒000-0000
        %p.prefecture
          東京都
          %span.city
            渋谷区
          %span.address
            神南１丁目１８−２ 
          %span.billding
            フレーム神南坂 4階
        %p.address_name
          山田太郎     
    .purchase__contents__form
      .submit-btn
        購入する    

  = render "purchase.footer"

